<Page x:Class="KlimovPR29.Pages.Clubs.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KlimovPR29.Pages.Clubs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20">
            <Image Source="/Images/pc.png" Height="90" Width="90" Margin="0,0,0,10"/>
            <Button x:Name="btn" Click="AddClub" Height="30" Content="Добавить" Foreground="White"
                    Background="#FF46FD00" BorderBrush="#FF46FD00" FontSize="15"/>
        </StackPanel>
        <StackPanel Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="20">
            <Label Content="Наименование:" FontSize="15"/>
            <TextBox x:Name="Name" Height="30" Margin="0,0,0,10"/>
            <Label Content="Адрес:" FontSize="15"/>
            <TextBox x:Name="Addres" Height="30"/>
        </StackPanel>
        <StackPanel Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="20">
            <Label Content="Время работы:" FontSize="15"/>
            <TextBox x:Name="WorkTime" Height="100" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Page>
