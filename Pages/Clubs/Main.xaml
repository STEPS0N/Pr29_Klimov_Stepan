<Page x:Class="KlimovPR29.Pages.Clubs.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KlimovPR29.Pages.Clubs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">

    <Grid>
        <Grid Margin="20" Background="#FFF0F0F0">
            <ScrollViewer Margin="0,0,0,50">
                <StackPanel x:Name="parent"/>
            </ScrollViewer>
            <Button x:Name="BtnAdd"
                    Click="AddClub"
                    Height="25"
                    Content="Добавить"
                    VerticalAlignment="Bottom"
                    Margin="10"
                    HorizontalAlignment="Right"
                    Width="100"
                    Background="#FF46FD00"
                    BorderBrush="#FF46FD00"
                    Foreground="White"/>
            <Button Click="FilterClear"
                    Height="25"
                    Content="Очистить"
                    VerticalAlignment="Bottom"
                    Margin="10"
                    HorizontalAlignment="Left"
                    Width="100"
                    Background="Red"
                    BorderBrush="Red"
                    Foreground="White"/>
            <Label Content="Поиск:"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Left"
                   Margin="120,10,10,10"/>
            <TextBox VerticalAlignment="Bottom"
                     HorizontalAlignment="Left"
                     Margin="170,0,0,10"
                     TextWrapping="Wrap"
                     VerticalContentAlignment="Center"
                     Width="153"
                     Height="25"
                     x:Name="filter"
                     TextChanged="Filter"/>
        </Grid>
    </Grid>
</Page>
