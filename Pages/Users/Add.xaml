<Page x:Class="KlimovPR29.Pages.Users.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KlimovPR29.Pages.Users"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20">
            <Image Source="/Images/man.png"  Height="90" Width="90" Margin="0,0,0,10"/>
            <Button x:Name="btn" Click="AddUser" Height="30" Content="Добавить" Foreground="White"
                Background="#FF46FD00" BorderBrush="#FF46FD00" FontSize="15"/>
        </StackPanel>
        <StackPanel Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="20">
            <Label Content="Дата аренды:" FontSize="15"/>
            <DatePicker x:Name="RentDate" Height="30" Margin="0,0,0,10" VerticalContentAlignment="Center"/>
            <Label Content="Время аренды:" FontSize="15"/>
            <TextBox x:Name="RentTime" Height="30" Margin="0,0,0,10"/>
            <Label Content="ФИО:" FontSize="15"/>
            <TextBox x:Name="FIO" Height="30"/>
        </StackPanel>
        <StackPanel Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="20">
            <Label Content="Продолжительность:" FontSize="15"/>
            <TextBox x:Name="Duration" Height="30" Margin="0,0,0,10"/>
            <Label Content="Клуб:" FontSize="15"/>
            <ComboBox x:Name="club" Height="30" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Page>
