<UserControl x:Class="KlimovPR29.Pages.Users.Elements.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KlimovPR29.Pages.Users.Elements"
             mc:Ignorable="d">

    <Grid Margin="10" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100px"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Width="80" Height="80" VerticalAlignment="Top" Margin="10" Source="/Images/man.png"/>
        <Button Click="EditUser" Height="25" Content="Изменить" VerticalAlignment="Top" Margin="10,95,10,0"
            Background="#FF46FD00" BorderBrush="#FF46FD00" Foreground="White"/>
        <Button Click="DeleteUser" Height="25" Content="Удалить" VerticalAlignment="Top" Margin="10,125,10,10"
            Background="Red" BorderBrush="Red" Foreground="White"/>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="130"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Content="Дата аренды:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0"/>
            <DatePicker x:Name="RentDate" VerticalAlignment="Top" Margin="10,36,10,0" Height="25"
                 VerticalContentAlignment="Center" IsEnabled="False" HorizontalAlignment="Stretch" Width="150"/>
            <Label Content="Время аренды:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,66,0,0"/>
            <TextBox x:Name="RentTime" Text="Время аренды" VerticalAlignment="Top" Margin="10,92,10,0" Height="25"
                 VerticalContentAlignment="Center" IsEnabled="False" HorizontalAlignment="Stretch"/>
            <Label Content="Клуб:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,66,0,0" Grid.Column="1"/>
            <TextBox x:Name="Club" Text="Название клуба" VerticalAlignment="Top" Margin="10,92,10,0" Height="25"
                 VerticalContentAlignment="Center" IsEnabled="False" HorizontalAlignment="Stretch" Grid.Column="1"/>
            <Label Content="Продолжительность:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Column="1"/>
            <TextBox x:Name="Duration" Text="Продолжительность аренды" VerticalAlignment="Top" Margin="10,36,10,0" Height="25"
                 VerticalContentAlignment="Top" HorizontalAlignment="Stretch" Grid.Column="1" IsEnabled="False" Width="150"/>

            <Label Content="ФИО:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1"/>
            <TextBox x:Name="FIO" VerticalAlignment="Top" Margin="10,025,10,10" Height="25" Grid.Row="1"
                 VerticalContentAlignment="Center" IsEnabled="False" Grid.ColumnSpan="2" HorizontalAlignment="Stretch"/>
        </Grid>
    </Grid>
</UserControl>
